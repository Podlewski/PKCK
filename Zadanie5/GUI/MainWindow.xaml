<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="PKCK - Zadanie 5" ResizeMode="NoResize" Height="450" Width="800">
    <Grid>

        <Menu VerticalAlignment="Top" Height="25" Background="LightGray" >
            <MenuItem Header="Plik" Margin="2 0 2 0" Height="25">
                <MenuItem Header="Wczytaj XML" Click="Load"/>
                <MenuItem Header="Zapisz XML" Click="Save" />
            </MenuItem>
            <MenuItem Header="Dodaj" Margin="2 0 2 0">
                <MenuItem Header="Dodaj wydawcę" Click="AddPH"/>
                <MenuItem Header="Dodaj gatunek" Click="AddGenre"/>
                <MenuItem Header="Dodaj typ" Click="AddType"/>
                <MenuItem Header="Dodaj system" Click="AddSystem"/>
                <MenuItem Header="Dodaj podręcznik" Click="AddHandbook"/>
            </MenuItem>
        </Menu>
        
        <TextBox TextWrapping="Wrap" Margin="10 35 10 10" Name="Box" />

    </Grid>
</Window>
